		</renderNodeProperties>
		
		<exclusionTags>
			<li>InsectorEye</li>
		</exclusionTags>
		
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<backgroundPathEndogenes>UI/Icons/Genes/VRE_CosmeticBG</backgroundPathEndogenes>
				<backgroundPathXenogenes>UI/Icons/Genes/VRE_CosmeticBG</backgroundPathXenogenes>
