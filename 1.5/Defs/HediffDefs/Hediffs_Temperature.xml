<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>VRE_HeatshockHediff</defName>
		<label>heatshock</label>
		<description>A generalized disruption to body functioning caused by excessive exposure to heat and sun. The victim can produce heat shock proteins in response to high temperatures, which will prevent them from dying but will make them require more nutrition. Recovery is quick once in a cool area.</description>
		<defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
		<canApplyDodChanceForCapacityChanges>true</canApplyDodChanceForCapacityChanges>
		<stages>
			<li>
				<label>initial</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>initial</label>
				<minSeverity>0.04</minSeverity>
				<hungerRateFactorOffset>0.5</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.22</minSeverity>
				<hungerRateFactorOffset>1</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.3</minSeverity>
				<hungerRateFactorOffset>2</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.62</minSeverity>
				<hungerRateFactorOffset>4</hungerRateFactorOffset>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>