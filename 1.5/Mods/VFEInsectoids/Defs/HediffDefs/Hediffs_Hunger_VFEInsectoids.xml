<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<HediffDef>
		<defName>VRE_Microsized</defName>
		<label>microsized</label>
	
		<description>The smaller genetic size causes a decrease in hunger rate.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				
				<hungerRateFactor>0.75</hungerRateFactor>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>VRE_Colossal</defName>
		<label>colossal</label>
	
		<description>The larger genetic size causes an increase in hunger rate.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				
				<hungerRateFactor>2</hungerRateFactor>
			</li>
		</stages>
	</HediffDef>
	
</Defs>